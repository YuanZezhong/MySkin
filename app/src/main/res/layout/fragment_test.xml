<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    skin:enable="true"
    android:background="@color/layout_background"
    android:orientation="vertical"
    tools:context="cn.sh.changxing.myskin.fragment.TestFragment">

    <TextView
        android:id="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textView_textColor"
        android:background="@color/textView_background"
        android:textSize="20sp"
        skin:enable="true"
        android:text="这个页面是一个fragment" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        skin:enable="true"
        android:background="@drawable/slt_button"
        android:text="红色主题"/>

    <Button
        android:id="@+id/btn_original"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        skin:enable="true"
        android:background="@drawable/slt_button"
        android:text="默认主题"/>
    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
